@model IEnumerable<PricePrediction.Models.tblBanner>

@{
    ViewBag.Title = "Banner";
}

<div id="slider" style="height:400px;">
    <div class="flexslider">
        <ul class="slides">
            @foreach (var item in Model)
            {
                <li>
                    <div class="slider-caption">
                        <h1>@item.bTitle</h1>
                        <p style="color:azure;">@item.bDescription</p>
                    </div>
                    <img src="~/BannerImages/@item.bPhoto" alt="" />
                </li>


            }
        </ul>
    </div>
</div>
<div class="row" style="margin:20px;">
    <div class="col-md-12">
        <h2 style="color:forestgreen; text-align:center; background-color:darkolivegreen; color:azure;"> Service Brands: </h2>
        <div class="col-md-2">
            <img src="~/Logo/logo1.jpg" height="100" width="100" />
        </div>
        <div class="col-md-2">
            <img src="~/Logo/logo2.jpg" height="100" width="100" />
        </div>
        <div class="col-md-2">
            <img src="~/Logo/logo3.png" height="100" width="100" />
        </div>
        <div class="col-md-2">
            <img src="~/Logo/logo4.png" height="100" width="100" />
        </div>
        <div class="col-md-2">
            <img src="~/Logo/logo5.jpg" height="100" width="100" />
        </div>
        <div class="col-md-2">
            <img src="~/Logo/logo6.png" height="100" width="100" />
        </div>
    </div>
</div>

<div class="row" style="margin-bottom:150px">
    <h2 style="color:forestgreen; text-align:center; background-color:darkolivegreen; color:azure; "> <marquee>Special Offers:</marquee> </h2>
    <div class="col-md-3">
