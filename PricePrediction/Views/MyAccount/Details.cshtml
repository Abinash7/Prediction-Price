@model PricePrediction.Models.tblProduct

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="panel panel-primary">
        <div class="panel-heading">Product Details</div>
        <div class="panel-body">
            <div>
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.pName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.pName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.pBrand)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.pBrand)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.photo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.photo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.pID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Back to List", "Select", null, new { @class = "btn btn-warning" })
            </p>
            </div>
        </div>
</body>
</html>
